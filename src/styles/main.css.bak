html {
  font-size: 2rem;
  color: black;
  background-color: #cccccc;
}
.step {
  margin: 0.2rem;
  padding: 0.5rem;
  max-width: 30rem;
  height: 2rem;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
  background-color: white;
}

.step-next {
  margin-left: 1rem;
  padding: 0.5rem;
  width: 30rem;
  max-height: 1.5rem;
  white-space: nowrap;
  overflow: hidden;
  border: 2px solid rgba(0, 0, 0, 0.2);
}

.step-next br {
  display: none;
}

.step-next:focus-within {
  background-color: rgb(175, 151, 151);
}
.etape {
  margin-left: 1rem;
}

